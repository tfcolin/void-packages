do_fetch() {
	cd ${XBPS_SRCDISTDIR}
	wget https://sourceforge.net/projects/pio/files/Source/${pkgname}-${version}.tar.gz
}

do_extract() {
	tar -xvf ${XBPS_SRCDISTDIR}/pioneers-15.6.tar.gz --strip-components=1
}
